---
const contactInfo = {
  name: "CyberManiac",
  address: {
    street: "72 boulevard Alexandre de Fraissinette",
    city: "42100 Saint-Étienne"
  },
  phone: {
    fixed: "04.87.66.67.33",
    mobile: "06.84.25.25.27"
  },
  email: "cybermaniac42@gmail.com"
};
---

<div class="bg-white p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-semibold mb-4">Nos coordonnées</h2>
  <div class="space-y-4">
    <p class="flex items-center">
      <span class="text-blue-600 text-xl mr-2">🏢</span>
      <span class="font-semibold">{contactInfo.name}</span>
    </p>
    <p class="flex items-center">
      <span class="text-blue-600 text-xl mr-2">📍</span>
      <span class="flex flex-col">
        <span>{contactInfo.address.street}</span>
        <span>{contactInfo.address.city}</span>
      </span>
    </p>
    <p class="flex items-center">
      <span class="text-blue-600 text-xl mr-2">☎️</span>
      <span class="flex flex-col">
        <span>Fixe : <a href={`tel:${contactInfo.phone.fixed}`} class="text-blue-600 hover:text-blue-800">{contactInfo.phone.fixed}</a></span>
        <span>Mobile : <a href={`tel:${contactInfo.phone.mobile}`} class="text-blue-600 hover:text-blue-800">{contactInfo.phone.mobile}</a></span>
      </span>
    </p>
    <p class="flex items-center">
      <span class="text-blue-600 text-xl mr-2">📧</span>
      <a href={`mailto:${contactInfo.email}`} class="text-blue-600 hover:text-blue-800">{contactInfo.email}</a>
    </p>
  </div>
</div>